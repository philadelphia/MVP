<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_dp_15"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/selectApplication"
        android:textColor="@color/titleTextSelectedColor"
        android:textSize="@dimen/font_size_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerLineColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bottom_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_marginHorizontal="@dimen/dimen_dp_15" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/titleTextSelectedColor"
        android:textSize="@dimen/font_size_normal"
        android:background="@null"/>

</LinearLayout>